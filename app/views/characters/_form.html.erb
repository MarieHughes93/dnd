<%= form_with(model: [@user, @character], local: true) do |f| %>
    <%= f.label :name %>
    <%= f.text_field :name %>
    <br>
    <%= f.label :race %>
    <%= f.text_field :race %>
    <br>
    <%= f.label :level %> <i> (In numeric format please)</i><br />
    <%= f.text_field :level %>
    <br>
    <%= f.label :background %><br>
    <%= f.text_area :background ,size: '50x10' %><br>
    <%= f.submit %>
<% end %>