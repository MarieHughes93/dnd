<h1>Campaigns</h1>
<% if @campaigns == [] %>
  <p>There are no groups at this time. If you would please click <%= link_to "here to create a campaign.", new_campaign_path %></p>
<% else %>
<%= link_to "Create New", new_campaign_path %>
  <ul>
    <% @campaigns.each do |camp|%>
      <li><strong>Name: </strong><%= camp.name %><br/>
      <strong> Owner: </strong> <%=camp.owner.username%><br/>
      <strong>Location: </strong><%= camp.location %><br/>
      <strong>Difficulty: </strong><%= camp.lvl %><br/>
      <strong>Members: </strong><%= camp.users.count%><br/>
      <%= link_to "View", campaign_path(camp)%>
      <% if current_user == camp.owner %>
        <%=link_to 'Edit', edit_campaign_path(camp)%>
        <%= link_to 'Disband', campaign_path(camp), :confirm=> "Are you sure?", method: :delete %>
      <% end%>
      </li>
      <br/>
    <%end %>
    
  </ul>
<% end %>